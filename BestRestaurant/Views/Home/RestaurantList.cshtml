@{
  Layout = "_Layout";
}

<div>
  <ul>
    @foreach(var restaurant in Model)
    {
      <li>@restaurant.GetRestaurantName()</li>
      <li>@restaurant.GetLocation()</li>
      <li>@restaurant.GetCuisineId()</li>

    }
  </ul>
</div>
